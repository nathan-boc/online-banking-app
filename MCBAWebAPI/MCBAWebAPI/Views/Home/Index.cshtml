@{
    ViewData["Title"] = "Admin Portal";
}

<div class="text-center">
    <h1 class="display-4">Hi, Welcome to the MCBA Admin Portal</h1>

    <p class="text-muted">(Most Common Bank of Australia)</p>

    <!--Checks if user is logged in by checking session data-->
	@{
		var isLoggedIn = Context.Session.GetInt32("Admin").HasValue;
	}
						
	<!--Display login button if not currently logged in-->
	@if(isLoggedIn == false)
	{
		<a class="btn btn-primary btn-lg active" role="button" aria-pressed="true" asp-controller="Login" asp-action="Login">
			Please login to continue
		</a>
	}

</div>
