@model Login

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<div>
    <h4>Login</h4>
    <hr />
    <form asp-action="Login">
        <div class="form-group">
            <input asp-for="LoginID" />
            <span asp-validation-for="LoginID"></span>
        </div>
        <div class="form-group">
            <input id="Password" name="Password" type="password" data-val= "true" data-val-required="A password is required."/>
        </div>
        <div class="form-group">
            <input type="submit" value="Login" />
        </div>

    </form>
    
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.LoginID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
