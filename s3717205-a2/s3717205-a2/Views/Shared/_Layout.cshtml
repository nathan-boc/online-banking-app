@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"]</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/s3717205_a2.styles.css" asp-append-version="true" />
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
			<div class="d-flex flex-row">
				
				<div class="p-2">
					<a class="navbar-brand" asp-controller="Home" asp-action="Index">MCBA WebApp</a>
				</div>

				<div class="p-2">
					<a class="nav-link text-white" asp-controller="Home" asp-action="Index">Home</a>
				</div>

				<!--Checks if user is logged in by checking session data-->
				@{
					var isLoggedIn = Context.Session.GetInt32(nameof(Customer.CustomerID)).HasValue;
				}
						
				<!--Links for Deposit, Transfer, Withdraw, My Statements & My Profile-->
				@if(isLoggedIn == true) {
					
					<div class="p-2">
						<a class="nav-link text-white" asp-controller="Customer" asp-action="Index">Dashboard</a>
					</div>
					
					<div class="p-2">
						<a class="nav-link text-white" asp-controller="Customer" asp-action="Deposit">Deposit</a>
					</div>

					<div class="p-2">
						<a class="nav-link text-white" asp-controller="Customer" asp-action="Withdraw">Withdraw</a>
					</div>
					
					<div class="p-2">
						<a class="nav-link text-white" asp-controller="Customer" asp-action="Transfer">Transfer</a>
					</div>

					<div class="p-2">
						<a class="nav-link text-white" asp-controller="Customer" asp-action="MyStatements">My Statements</a>
					</div>

					<div class="p-2">
						<a class="nav-link text-white" asp-controller="Customer" asp-action="MyProfile">My Profile</a>
					</div>

					<div class="p-2">
						<a class="nav-link text-white" asp-controller="Login" asp-action="Logout">Logout</a>
					</div>

				} else {
					<div class="p-2">
						<a class="nav-link text-white" asp-controller="Login" asp-action="Login">Login</a>
					</div>
				}

			</div>
		</nav>
	</header>

	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container" style="text-align:center">
			Web Development Technologies 2022 (Flex)
			<br /><br />
			Nathan Boc - s3717205
		</div>
	</footer>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
