@model Login

@{
	ViewData["Title"] = "Change Password";

	var successMessage = ViewBag.Success;
}

<h1>Change Password</h1>

<div>
	<hr />

	<label>@successMessage</label>

	<form asp-action="ChangePassword">

		<div class="form-group">
			<label>Old Password:</label>
			<input id="OldPassword" name="OldPassword" type="password" class="form-control" />
			@Html.ValidationMessage("IncorrectPassword", new { @class = "text-danger" })
		</div>

		<div class="form-group">
			<label>New Password:</label>
			<input id="NewPassword" name="NewPassword" type="password" class="form-control" />
			@Html.ValidationMessage("EmptyPassword", new { @class = "text-danger" })
		</div>

		<div class="form-group">
			<label>Confirm New Password:</label>
			<input id="ConfirmPassword" name="ConfirmPassword" type="password" class="form-control" />
			@Html.ValidationMessage("EmptyPassword", new { @class = "text-danger" })
			@Html.ValidationMessage("PasswordNotMatching", new { @class = "text-danger" })
		</div>

		<div class="form-group">
			<input type="submit" value="Submit" class"btn btn-primary" />
		</div>
	</form>

	<a class="btn btn-primary btn-lg active" role="button" aria-pressed="true" asp-action="MyProfile">
		Go Back
	</a>

</div>