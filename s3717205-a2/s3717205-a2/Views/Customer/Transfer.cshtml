@model Account

@{
    ViewData["Title"] = "Transfer";
}

<h1>Transfer Page</h1>

<div>
   <hr />

	<form asp-action="Transfer">

		<div class="form-group">
			<label asp-for="AccountNumber" class="control-label"></label>
			<input asp-for="AccountNumber" class="form-control" />
			<span asp-validation-for="AccountNumber" class="text-danger"></span>
			@Html.ValidationMessage("InvalidAccount", new { @class = "text-danger" })
		</div>

		<div class="form-group">
			<label for="DestinationAccountNumber" class="control-label">Destination Account Number</label>
			<input for="DestinationAccountNumber" name="DestinationAccountNumber" class="form-control" />
			@Html.ValidationMessage("SameAccount", new { @class = "text-danger" })
		</div>

		<div class="form-group">
			<label for="Amount" class="control-label">Amount</label>
			<input for="Amount" name="Amount" class="form-control" value="@ViewBag.Amount?.ToString("0.00")"
			data-val="true" data-val-number="Must give a valid transfer amount."
					data-val-required="A transfer amount is required." />
			@Html.ValidationMessage("NegativeAmount", new { @class = "text-danger" })
			@Html.ValidationMessage("TooManyDecimals", new { @class = "text-danger" })
			@Html.ValidationMessage("InsufficientFunds", new { @class = "text-danger" })
		</div>

		<div class="form-group">
			<input type="submit" value="Transfer" class"btn btn-primary" />
		</div>

	</form>

</div>