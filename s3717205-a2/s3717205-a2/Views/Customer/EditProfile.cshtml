@model Customer

@{
    ViewData["Title"] = "My Profile";

    var customer = ViewBag.Customer;
}

<h1>Edit My Profile</h1>

<div>

    <form>

        <div class="border-bottom">
            <label asp-for="Name" class="control-label"></label>
            <p>@customer.Name</p>
            <input id="Name" name="Name" class="form-control" />
        </div>

        <div class="border-bottom">
            <label asp-for="TFN" class="control-label"></label>
            <p>@customer.TFN</p>
            <input id="TFN" name="TFN" class="form-control" />
        </div>

        <div class="border-bottom">
            <label asp-for="Address" class="control-label"></label>
            <p>@customer.Address</p>
            <input id="Address" name="Address" class="form-control" />
        </div>

        <div class="border-bottom">
            <label asp-for="Suburb" class="control-label"></label>
            <p>@customer.Suburb</p>
            <input id="Suburb" name="Suburb" class="form-control" />
        </div>

        <div class="border-bottom">
            <label asp-for="State" class="control-label"></label>
            <p>@customer.State</p>
            <input id="State" name="State" class="form-control" />
        </div>

        <div class="border-bottom">
            <label asp-for="Postcode" class="control-label"></label>
            <p>@customer.Postcode</p>
            <input id="Postcode" name="Postcode" class="form-control" />
        </div>

        <div class="border-bottom">
            <label asp-for="Mobile" class="control-label"></label>
            <p>@customer.Mobile</p>
            <input id="Mobile" name="Mobile" class="form-control" />
        </div>

        <input type="submit" value="Save Changes" class"btn btn-primary" />

    </form>

    <a class="btn btn-primary btn-lg active" role="button" aria-pressed="true" asp-action="MyProfile">
		Cancel
	</a>

</div>
