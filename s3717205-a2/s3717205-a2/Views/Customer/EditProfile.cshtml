@model Customer

@{
    ViewData["Title"] = "My Profile";

    var customer = ViewBag.Customer;
}

<h1>Edit My Profile</h1>

<div>

    <form asp-action="EditProfile">

        <div class="border-bottom">
            <label asp-for="Name" class="control-label"></label>
            <input id="Name" name="Name" class="form-control" value="@customer.Name" />
        </div>

        <div class="border-bottom">
            <label asp-for="TFN" class="control-label"></label>
            <input id="TFN" name="TFN" class="form-control" value="@customer.TFN" />
        </div>

        <div class="border-bottom">
            <label asp-for="Address" class="control-label"></label>
            <input id="Address" name="Address" class="form-control" value="@customer.Address" />
        </div>

        <div class="border-bottom">
            <label asp-for="Suburb" class="control-label"></label>
            <input id="Suburb" name="Suburb" class="form-control" value="@customer.Suburb" />
        </div>

        <div class="border-bottom">
            <label asp-for="State" class="control-label"></label>
            <input id="State" name="State" class="form-control" value="@customer.State" />
        </div>

        <div class="border-bottom">
            <label asp-for="Postcode" class="control-label"></label>
            <input id="Postcode" name="Postcode" class="form-control" value="@customer.Postcode" />
        </div>

        <div class="border-bottom">
            <label asp-for="Mobile" class="control-label"></label>
            <input id="Mobile" name="Mobile" class="form-control" value="@customer.Mobile" />
        </div>

        <input type="submit" value="Save Changes" class"btn btn-primary" />

    </form>

    <a class="btn btn-primary btn-lg active" role="button" aria-pressed="true" asp-action="MyProfile">
		Cancel
	</a>

</div>
